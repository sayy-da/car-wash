<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Car Service - Best Water Service Center</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      rel="stylesheet"
      as="style"
      onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700&family=Noto+Sans:wght@400;700&display=swap"
    />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  

  </head>
  <body
    class="min-h-screen flex items-center justify-center bg-cover bg-center bg-fixed p-4 sm:p-6 lg:p-8"
    style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1575844611398-2a68400b437c?fm=jpg&q=60&w=3000'); font-family: 'Plus Jakarta Sans', 'Noto Sans', sans-serif;"
  >
<div class="w-full max-w-sm sm:max-w-md lg:max-w-lg xl:max-w-xl bg-[#31160c]/40 backdrop-blur-md border border-[#7e3920]/20 rounded-2xl shadow-2xl p-6 sm:p-8 lg:p-10 mt-16">
      <!-- Header -->
      <div class="text-center mb-6 sm:mb-8">
        <h1 class="text-white text-2xl sm:text-3xl font-bold mb-1">Book Your Service</h1>
        <p class="text-[#de977c] text-sm sm:text-base opacity-90">Schedule your car care appointment</p>
      </div>

      <!-- Form -->
     <form class="space-y-5 mt-10" action="/book" method="POST">

        <!-- Name -->
        <div>
          <label class="block text-white text-sm font-medium mb-1">Your Name *</label>
          <input
          name="name"
            type="text"
            placeholder="Enter your full name"
            required
            class="form-input w-full rounded-lg h-11 px-4 bg-[#451f11]/50 text-white border border-[#7e3920] placeholder:text-[#de977c] focus:ring-2 focus:ring-[#ff6b35] focus:border-[#ff6b35]"
          />
        </div>
          <div>
            <label class="block text-white text-sm font-medium mb-1">Phone *</label>
            <input
               name="phone"
              type="tel"
              placeholder="Your phone number"
              required
            class="form-input w-full rounded-lg h-11 px-4 bg-[#451f11]/50 text-white border border-[#7e3920] placeholder:text-[#de977c] focus:ring-2 focus:ring-[#ff6b35] focus:border-[#ff6b35]"
            />
          </div>
          
        

        <!-- Vehicle Type -->
        <div>
          <label class="block text-white text-sm font-medium mb-1">Vehicle Type *</label>
          <input
            type="text"
            name="vehicle"
            placeholder="e.g., Bike, Car "
            required
            class="form-input w-full rounded-lg h-11 px-4 bg-[#451f11]/50 text-white border border-[#7e3920] placeholder:text-[#de977c] focus:ring-2 focus:ring-[#ff6b35] focus:border-[#ff6b35]"
          />
        </div>

        <!-- Date -->
        <div>
          <label class="block text-white text-sm font-medium mb-1">Date</label>
          <input
          name="date"
            type="date"
            required
            class="form-input w-full rounded-lg h-11 px-4 bg-[#451f11]/50 text-white border border-[#7e3920] focus:ring-2 focus:ring-[#ff6b35] focus:border-[#ff6b35]"
          />
        </div>
        
<div>
  <label class="inline-flex items-center text-white space-x-2">
    <input
      type="checkbox"
      id="pickDropCheckbox"
      name="pickdrop"
      class="form-checkbox text-[#ff6b35] border-[#7e3920]"
      onchange="togglePickDropOptions()"
    />
    <span>Need Pick and Drop?</span>
  </label>
</div>
<!-- WhatsApp Link (initially hidden) -->
<div id="whatsappLinkContainer" class="mt-3 hidden">
  <a
    href="https://wa.me/916238109533?text=Hi,%20I%20need%20pick%20and%20drop%20service%20for%20my%20car."
    target="_blank"
    class="inline-block bg-[#451f11] hover:bg-[#7e3920] text-white font-medium py-2 px-4 rounded-lg transition"
  >
    Contact Us on WhatsApp ->
  </a>
</div>

        <!-- Submit -->
        <div>
          <button
            type="submit"
            class="w-full h-12 bg-gradient-to-r from-[#ff6b35] to-[#e55a2b] text-white font-bold rounded-lg shadow-lg hover:from-[#e55a2b] hover:to-[#d14d20] hover:scale-[1.02] active:scale-[0.98] transition-all"
          >
            Book My Service
          </button>
        </div>

        <!-- Contact Info -->
        <div class="text-center pt-4">
          <p class="text-[#de977c] text-xs sm:text-sm">
            Need help? Call us at
            <a href="tel:+1234567890" class="text-[#ff6b35] hover:text-[#e55a2b] font-medium transition">
              +1 (234) 567-8900
            </a>
          </p>
        </div>
      </form>
    </div>


    <!-- Loading Animation -->
    <div id="loading" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center">
      <div class="bg-[#31160c] rounded-lg p-6 flex items-center space-x-3">
        <div class="animate-spin h-6 w-6 border-2 border-[#ff6b35] border-t-transparent rounded-full"></div>
        <span class="text-white">Processing your booking...</span>
      </div>
    </div>

    <!-- JS -->
    <script>
      const form = document.getElementById("bookingForm");
      const loading = document.getElementById("loading");
      const dateInput = form.querySelector('input[type="date"]');

      // Set minimum date to today
      dateInput.min = new Date().toISOString().split("T")[0];

      // Handle submission
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        loading.classList.remove("hidden");

        setTimeout(() => {
          loading.classList.add("hidden");
          alert("Booking submitted successfully! We will contact you shortly.");
          form.reset();
        }, 2000);
      });
      function togglePickDropOptions() {
        const checkbox = document.getElementById("pickDropCheckbox");
        const linkContainer = document.getElementById("whatsappLinkContainer");
      
        if (checkbox.checked) {
          linkContainer.classList.remove("hidden");
        } else {
          linkContainer.classList.add("hidden");
        }
      }
      </script>
  </body>
</html>
